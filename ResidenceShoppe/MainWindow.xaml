<Window x:Class="ResidenceShoppe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ResidenceShoppe"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1076.822"
        Height="654.665"
        mc:Ignorable="d">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding FloorNumber}" />
        <Button Grid.Row="1"
                Command="{Binding IncreaseFloorNumberCommand}"
                Content="ChangeText" />
        <DataGrid HorizontalAlignment="Left" Height="257" Margin="0,111,0,-267" Grid.Row="1" VerticalAlignment="Top" Width="1059" Name="dgHousing"/>
        <DataGrid HorizontalAlignment="Left" Height="220" Margin="0,373,0,-492" Grid.Row="1" VerticalAlignment="Top" Width="1059" Name="dgComodities"/>
    </Grid>
</Window>
